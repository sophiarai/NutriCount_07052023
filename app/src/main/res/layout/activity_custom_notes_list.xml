<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomNotesList">


    <TextView
        android:id="@+id/textView_notes_date"
        android:text="Datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/textView_notes_allCalories"
        android:text="Kalorien Gesamt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_notes_burnedCalories"
        android:text="Verbrannte Kalorien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_notes_consumedCalories"
        android:text="Gegessene Kalorien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>